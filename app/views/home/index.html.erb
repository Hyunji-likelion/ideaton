    <!-- Custom Theme JavaScript -->
    <script>
    
    
        var maxChecked = 1;   //선택가능한 체크박스 갯수
        var totalChecked = 0; // 설정 끝
        function CountChecked(field) {
            if (field.checked)
                totalChecked += 1;
            else
                totalChecked -= 1;
            if (totalChecked > maxChecked) {
                alert ("최대 1개 까지만 가능합니다.");
                field.checked = false;
                totalChecked -= 1;
            }
        }
        
    $(".btnView" ).click(function() {
        var inputString = prompt('투표결과를 보고싶으시면 비밀번호를 입력하세요', 'password');
        if(inputString == "kmu2018"){  
              document.getElementById("result_session").style.display = "block";
            // jQuery('.result_session').css("display", "block");
        } 
    });
    
    $(".vote_submit").click(function(){
       
        var pickme = document.getElementsByName("pickme");
        var count = pickme.length;
        var check_val = new Array()
        for(i=0;i<count;i++){
            if(pickme[i].checked == true)
                check_val.push(i+1);
        }
        
        $.ajax({
          method: "Post", // 전송방법
          url: "/count_check", //처리할 url
          data: { value1: check_val[0], value2: check_val[1] },//전송할 데이터 params hash
          success: function(){
            alert("투표되었습니다.");
          },
          error: function(){
            alert("투표되었습니다.");
          }
         });
    })

    $( ".idea_submit" ).click(function() {
    // ajax는 javascript로 서버로 데이터를 던지는 것 
    // form태그랑 같은 역할 - 겹치면 안됨
          var InputTitle = $( "#title" ).val();
          var InputEditor = $( "#editor" ).val();
          var InputContent = $( "#content" ).val();
        $.ajax({
          method: "POST", // 전송방법
          url: "/create", //처리할 url
          data: { title: InputTitle, editor: InputEditor, content: InputContent }, //전송할 데이터 params hash
          success: function(){
            alert("작성되었습니다.");
          },
            error: function(){
            alert("작성되지 않았습니다.");
          }
        });
    });
    
    
    // Closes the sidebar menu
    $("#menu-close").click(function(e) {
        e.preventDefault();
